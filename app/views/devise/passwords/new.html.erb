<div class="row">
  <div class="col-sm-6 offset-md-3">
    <div class="card pb-3" id="login-box">
      <div class="card-body">
        <h2><%= t(".forgot_question") %></h2>
        <p class="description"><%= t(".forgot_question_description") %></p>
        <%= render 'application/flash_messages' %>
        <%= show_error_messages!(resource) %>
        <%= form_for resource, url: password_path(resource_name), html: { method: :post } do |f| %>
          <div class="mb-3">
            <div class="input-group">
              <span class="input-group-prepend">
                <%= glyph(:envelope) %>
              </span>
              <%= f.text_field :email, required: false, autofocus: true, placeholder: t("application.login_form.email"), class: "form-control form-control-lg" %>
            </div>
          </div>
          <div class="mb-3">
            <div class="row">
              <div class="col-12">
                <%= f.submit t(".send_instructions"), class: "btn btn-primary btn-lg col-12", data: { disable_with: '...' } %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
