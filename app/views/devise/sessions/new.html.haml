.row
  .col-sm-4
    = render "devise/shared/links"
  .col-sm-8
    .panel.panel-primary
      .panel-heading
        %h2.panel-title
          =t("layouts.application.login")

      .panel-body
        = form_for resource, url: session_path(resource_name) do |f|
          .form-group
            = f.label :email, class: "control-label"
            = f.text_field :email, :required => false, :autofocus => true, class: "form-control"
          .form-group
            = f.label :password, class: "control-label"
            = f.password_field :password, :required => false, :autofocus => true, class: "form-control"
          - if devise_mapping.rememberable?
            .form-group
              .checkbox
                = f.label :remember_me do
                  = f.check_box :remember_me
                  = t(".remember_me")
          .form-group
            = f.submit "Sign in", class: "btn btn-primary"
