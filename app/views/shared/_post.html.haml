%h1
  = post.title
.row
  .sidebar.col-md-3

    .panel.panel-info
      .panel-heading
        %h3.panel-title
          = post.class.model_name.human
          %small= post.category
      .panel-body
        - if post.tags.present?
          - post.tags.each do |tag|
            %span.badge.badge-info
              = glyph(:tag)
              - path = (post.type.eql?("Offer"))?offers_path(tag: tag):inquiries_path(tag: tag)
              =link_to path do
                = tag
          %br
        = t '.created_by'
        = link_to post.user, post.user, title: post.user.email
        %br
        = t '.created_at'
        = l post.created_at.to_date, format: :short


  .col-md-9


    %p.lead= post.description
