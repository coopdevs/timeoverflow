<% posts.each do |post| %>
  <div class="post">
    <h4>
      <%= link_to post.title, polymorphic_url([@organization, post]) %>
    </h4>
    <p>
      <%= strip_tags(post.rendered_description.to_html) %>
    </p>
    <p>
      <small>
        <% if post.category %>
          <%= glyph :folder_open %>
          <span class="category">
            <%= link_to post.category, get_index_path(post, cat: post.category) %>
          </span>
        <% end %>
        <% (post.tags || []).each do |tag| %>
          <%= glyph :tag %>
          <%= link_to tag, get_index_path(post, tag: tag) %>
        <% end %>
        <% if post.type == "Inquiry" %>
          <span class="pull-right">
            <%= l post.updated_at.to_date, format: :long %>
          </span>
        <% end %>
      </small>
    </p>
  </div>
<% end %>
