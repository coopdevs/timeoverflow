<h1>
  <%= link_to @organization, organization_path(@organization) %>
</h1>

<div class="row">
  <div class="col-sm-6">
    <div class="panel panel--default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= t '.contact_information' %>
        </h3>
      </div>
      <div class="panel-body panel-body--organizer">
        <dl>
          <dt>
            <i class="material-icons u-va-5 u-mr-5">email</i>
            <%= Organization.human_attribute_name 'email' %>
          </dt>
          <dd>
            <%= @organization.email %>
          </dd>
          <dt>
            <i class="material-icons u-va-5 u-mr-5" >phone</i>
            <%= Organization.human_attribute_name 'phone' %>
          </dt>
          <dd>
            <%= @organization.phone %>
          </dd>
          <dt>
            <i class="material-icons u-va-5 u-mr-5">web</i>
            Web
          </dt>
          <dd>
            <%= link_to_if @organization.web.present?,
                           @organization.web,
                           @organization.web %>
          </dd> 
          <dt>
            <i class="material-icons u-va-5 u-mr-5">timelapse</i>          
            <%= Organization.human_attribute_name 'public_opening_times' %>
          </dt>
          <dd>
            <%= @organization.public_opening_times %>
          </dd>
          <dt>
            <i class="material-icons u-va-5 u-mr-5">location_on</i>
            <%= Organization.human_attribute_name 'address' %>
          </dt>
          <dd>
            <%= @organization.address %>
          </dd>
          <dt>
            <i class="material-icons u-va-5 u-mr-5">people</i>
            <%= Organization.human_attribute_name 'neighborhood' %>
          </dt>
          <dd>
            <%= @organization.neighborhood %>
          </dd>
          <dt>
            <i class="material-icons u-va-5 u-mr-5">location_city</i>
            <%= Organization.human_attribute_name 'city' %>
          </dt>
          <dd>
            <%= @organization.city %>
          </dd>
        </dl>
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="panel panel--default">
      <div class="panel-heading">
        <h3 class="panel-title">
          <%= t 'global.information' %>
        </h3>
      </div>
      <div class="panel-body panel-body--organizer">
        <dl>
          <dt>
            <i class="material-icons u-va-5 u-mr-5">calendar_today</i>
            <%= Organization.human_attribute_name 'created_at' %>
          </dt>
          <dd>
            <%= l @organization.created_at, format: :long %>
          </dd>
          <dt>
            <i class="material-icons u-va-5 u-mr-5">today</i>
            <%= Organization.human_attribute_name 'updated_at' %>
          </dt>
          <dd>
          <%= l @organization.updated_at, format: :long %>
          </dd>
          <dt>
            <i class="material-icons u-va-5 u-mr-5">people</i>
            <%= t 'global.member_count' %>
          </dt>
          <dd>
          <%= @organization.members.count %>
          </dd>
          <dt>
            <i class="material-icons u-va-5 u-mr-5">access_time</i>
            <%= t 'global.balance' %>
          </dt>
          <dd>
            <%= seconds_to_hm(@organization.account.try(:balance) || 'â€”') %>
          </dd>
        </dl>
      </div>
    </div>
  </div>
  
</div>

<div class="row">
  <div class="col-sm-12">
    <ul class="nav nav-pills pull-right nav-pills-xs-block">
      <% if superadmin? %>
        <li>
          <%= link_to organizations_path, class: "mdc-button mdc-button--raised" do %>            
            <i class="material-icons u-va-5">arrow_back</i>
            <%= t 'global.back' %>
          <% end %>
        </li>
      <% end %>
      <% if admin? %>
        <li>
          <%= link_to edit_organization_path(@organization), class: "mdc-button mdc-button--raised" do %>
            <i class="material-icons u-va-5">edit</i>
            <%= t "global.edit" %>
          <% end %>
        </li>
      <% end %>
      <% if current_user&.active?(@organization) %>
        <li>
          <%= link_to new_transfer_path(id: @organization, destination_account_id: @organization.account.id), class: "mdc-button mdc-button--raised" do %>
            <i class="material-icons u-va-5">access_time</i>
            <%= t "global.give_time" %>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<% if current_user %>
  <%= render "shared/movements" %>
<% end %>
