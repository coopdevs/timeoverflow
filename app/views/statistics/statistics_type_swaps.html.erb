<h1>
  <%= t 'global.statistics' %>: <%= t '.type_of_swaps' %>
</h1>
<div class="panel panel-default">
  <div class="panel-body">
    <table class="table table-hover table-condensed">
      <thead>
        <tr>
          <th>%</th>
          <th><%= "#{Category.model_name.human} -> #{Offer.human_attribute_name(:tag_list)}" %></th>
          <th><%= t 'statistics.statistics_global_activity.total_hours' %></th>
          <th><%= t 'statistics.statistics_global_activity.num_swaps' %></th>
        </tr>
      </thead>
      <tbody>
        <%# [["Clases", "clases", 13020, 3, 0.30], ["Domestic", "coche", 2220, 1, 0.1],...] %>
        <% @offers.each do |offer| %>
          <tr>
            <td><%= number_to_percentage offer.last * 100, precision: 2 %></td>
            <td><%= "#{offer[0]} -> #{offer[1]}" %></td>
            <td><%= seconds_to_hm offer[2] || 'â€”' %></td>
            <td><%= offer[3] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
