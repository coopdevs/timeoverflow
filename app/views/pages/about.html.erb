<div class="container-inner">
  <div class="row">
    <div class="col-10 col-sm-10 col-md-6 col-lg-6 offset-xs-1 offset-sm-1 offset-md-3 offset-lg-3 header">
      <h2><%= t("pages.about.title") %><span><%= t("pages.about.title2") %></span></h2>
      <h3><%= t("pages.about.subtitle") %></h3>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10 offset-sm-1 features">
      <ul>
      <% for i in 1..2 %>
        <li>
          <div class="feature-group<%= i == 1 ? ' first' : '' %>">
            <div class="feature-group-text"><%= t("pages.about.feature-group-#{i}") %></div>
          </div>
          <ul>
          <% for j in 1..3 %>
            <li <%= (i*j) == 6 ? 'class=last' : '' %>>
              <div class="feature">
                <div class="feature-icon"><%= glyph(:ok) %></div>
                <div class="feature-text"><%= t("pages.about.feature-text-#{i*j}") %></div>
              </div>
            </li>
          <% end %>
          </ul>
        </li>
      <% end %>
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 banner">
      <h2><%= t("pages.about.banner-title") %></h2>
      <h3><%= t("pages.about.banner-subtitle") %></h3>
      <a href="http://adbdt.org/contacta/" class="btn btn-info" role="button"><%= t("pages.about.banner-button") %></a>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10 offset-sm-1 section-block">
      <h2><%= t("pages.about.empower-title") %></h2>
      <p><%= t(
        "pages.about.empower-text-1",
        showmap_link: link_to(
          t("pages.about.empower-showmap"),
          "https://adbdt.org/unete-a-un-banco-de-tiempo/",
          { title: t("pages.about.empower-showmap-title") }
        )
      ).html_safe %></p>
      <p><%= t(
        "pages.about.empower-text-2",
        coopdevs_link: link_to(
          t("pages.about.empower-coopdevs"),
          "https://github.com/coopdevs",
          { title: t("pages.about.empower-coopdevs-title") }
        ),
        abdt_link: link_to(
          t("pages.about.empower-adbdt"),
          "http://adbdt.org",
          { title: t("pages.about.empower-adbdt-title") }
        )
      ).html_safe %></p>
      <p><%= t(
        "pages.about.empower-text-3",
        github_link: link_to(
          t("pages.about.empower-github"),
          "https://github.com/coopdevs/timeoverflow",
          { title: t("pages.about.empower-github-title") }
        )
      ).html_safe %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10 offset-sm-1 section-block">
      <h2><%= t("pages.about.app-mobile") %></h2>
      <p><%= t(
        "pages.about.app-mobile-text",
        impulsem_link: link_to(
        t("pages.about.impulsem-link"),
        "https://empreses.barcelonactiva.cat/ca/web/es/impulsem-el-que-fas-2017",
        )
      ).html_safe %></p>
    </div>
   </div>

   <div class="row">
    <div class="col-sm-12 text-center">
      <a href="http://www.barcelonactiva.cat" ><%= image_tag("ajuntament_bcn_activa.png", width: '400', class: "img-fluid mx-auto") %></a>
    </div>
   </div>
</div>
